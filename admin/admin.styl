#ts-container
  position: fixed
  top: 0
  left: 0
  right: 0
  z-index: 5000 // Make sure this shows

#ts-content
  display: none // hidden by default
  max-height: 600px
  overflow: auto
  margin-bottom: 0px

#ts-tabs
  height: 0px

.ts-adminToggle
  background-color: gold
  opacity: 0.7

.ts-admin-layout
  position: relative
  height: 100%

.ts-scroll-parent
  overflow-y: auto
  overflow-x: visible
  width: 100%
  height: 100%

.ts-admin-body
  position: absolute
  top: 60px
  bottom: 0
  left: 0
  right: 0

.ts-user-pill-container
  display: inline-block

dl.ts-compact, dl.dl-horizontal.ts-compact
  margin: 0

table.ts-admin-table
  // border-collapse: collapse
  border-spacing: 0
  // The below two directives force a wrap
  table-layout: fixed
  word-wrap: break-word
